#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include “math.h”
 
using namespace std;

int main() 
{   float a,b,c,s,area;
    Cout<< “ingrasar a:”;
    Cin>> a;
    Cout<< “ingresar b:”;
    Cin>> b;
    Cout<< “ingresar c:”;
    Cin>> c;
    S= (a+b+c)/2;
    Area= sqrt((s*(s-a)*(s-b)*(s-c));
    Cout<< area;
Getch()
}
